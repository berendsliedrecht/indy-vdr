{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "lib": ["ESNext"],
    "baseUrl": ".",
    "paths": {
      "indy-vdr-shared": ["shared/src"],
      "indy-vdr-react-native": ["react-native/src"],
      "indy-vdr-nodejs": ["nodejs/src"]
    },
    "types": [],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "build", "**/build/**"]
}
